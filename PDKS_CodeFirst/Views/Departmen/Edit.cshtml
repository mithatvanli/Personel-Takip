@model PDKS_CodeFirst.Entity.Departman

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_pdks.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
 

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmanAdi, "Departman Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DepartmanAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartmanAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-secondary" />
                @Html.ActionLink("Listeye Dön", "Index", "", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}

