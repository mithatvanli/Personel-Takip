@model IEnumerable<PDKS_CodeFirst.Entity.Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_pdks.cshtml";
}



<table class="table table-bordered bg-dark  border-light text-center text-light" >
    <tr>
        <th style="font-family:Calibri;" class="text-light">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th style="font-family:Calibri"class="text-light">
            @Html.DisplayNameFor(model => model.DepartmanAdi)
        </th>

        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmanAdi)
        </td>
        <td>           
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })

        </td>
        <td>
            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<br />
