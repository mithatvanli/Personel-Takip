    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Kaldır" class="btn btn-danger"id="BtnSil" />
            @Html.ActionLink("Listeye Dön", "Index", "", new { @class = "btn btn-success" })
        </div>
    }
