<script src="~/vendor/jquery/sweetalert.js"></script>
<link href="~/Scripts/sweetalert/sweetalert2.css" rel="stylesheet" />
<link href="~/Scripts/sweetalert/sweetalert2.min.css" rel="stylesheet" />

<script src="~/vendor/jquery/jquery-3.3.1.min.js"></script>
<script src="~/vendor/jquery/jquery-3.3.1.intellisense.js"></script>
<script type="text/javascript">
    $("#BtnSil").click(function () {
            event.preventDefault();
            Swal.fire({
                title: "Silmek İstediğinize Emin Misiniz ?",
                Text: "Sil",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#2ecc71',
                confirmButtonText: 'Evet',
                CancelButtonText: 'Hayır',
                CancelButtonColor: 'Red'
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#deleteForm').submit();
                }
            });

        });

</script>
