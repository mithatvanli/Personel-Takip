@model PDKS_CodeFirst.Entity.PersonelCocuk

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_pdks.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CocukAdı,"Çocuk Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.CocukAdı, new { htmlAttributes = new { @class = "form-control border-secondary" } })
                @Html.ValidationMessageFor(model => model.CocukAdı, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CocukDogumTarihi,"Doğum Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.CocukDogumTarihi, new { htmlAttributes = new { @class = "form-control border-secondary" } })
                @Html.ValidationMessageFor(model => model.CocukDogumTarihi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CocukCinsiyet,"Cinsiyet", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CocukCinsiyet)
                    @Html.ValidationMessageFor(model => model.CocukCinsiyet, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PersonelOzlukId, "Personel Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("PersonelOzlukId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PersonelOzlukId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
     
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
                @Html.ActionLink("Listeye Dön", "Index","", new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Tarih.js"></script>

