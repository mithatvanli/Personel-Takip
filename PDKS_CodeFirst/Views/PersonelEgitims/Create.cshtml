            </div>
        </div>

        <div class="form-group">
           
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" /> 
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
