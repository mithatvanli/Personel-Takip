@model IEnumerable<PDKS_CodeFirst.Entity.PersonelPuantaJ>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_pdks.cshtml";
}
<br />
<br />
<table class="table table-bordered bg-dark table-responsive border-light text-center text-light ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonelOzluk.Adi) @Html.DisplayNameFor(model => model.PersonelOzluk.Soyadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalısmaSaati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GirisSaati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CıkısSaati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mazeret)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.PersonelOzluk.Adi    @item.PersonelOzluk.Soyadi
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalısmaSaati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GirisSaati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CıkısSaati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mazeret)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @Class = "btn btn-secondary" })

            </td>
            <td>
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @Class = "btn btn-info" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<br />
<br />
<p>
    @Html.ActionLink("Yeni Kayıt", "Create", "", new { @class = "btn btn-success" })
</p>
